<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <!-- TITLE TEXT -->
    <TextView
        android:id="@+id/txtTitle"
        android:text="Basic Calcuclator"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- INPUT TEXT -->
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text=""
        android:textColor="#101010"
        android:textSize="40sp"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RESULT TEXT -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/tvInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- All Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btnAC"
                android:text="AC"
                style="@style/CalcBtn"/>
            <Button android:id="@+id/btnDel"
                android:text="⌫"
                style="@style/CalcBtn"/>
            <Button android:id="@+id/btnDiv"
                android:text="÷"
                style="@style/CalcBtn"

                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                style="@style/CalcBtn"/>
            />
            <Button
                android:id="@+id/btn8"
                android:text="8"
                style="@style/CalcBtn"/>
            />
            <Button
                android:id="@+id/btn9"
                android:text="9"
                style="@style/CalcBtn"/>
            />
            <Button
                android:id="@+id/btnMul"
                android:text="×"
                style="@style/CalcBtn"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4"
                android:text="4"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btnSub"
                android:text="-"
                style="@style/CalcBtn"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btnAdd"
                android:text="+"
                style="@style/CalcBtn"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn0"
                android:text="0"
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btnDot"
                android:text="."
                style="@style/CalcBtn"/>
            <Button
                android:id="@+id/btnEqual"
                android:text="="
                style="@style/CalcBtnEqual"/>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>